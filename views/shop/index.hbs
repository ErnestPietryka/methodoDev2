<div class="row">
    {{# each this }}


    <div class="card col-sm-6 col-md-4" style="width: 18rem;">
        <img src="{{ this.imagePath }}"
            class="card-img-top" alt="..." class="img-responsive">
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.description}}</p>
            <div class="clearfix">
                <div class="price float-left"> {{this.price}} â‚¬</div>
                <a href="/add-to-cart/{{this.id}}" class="btn btn-primary float-right">Ajouter au panier</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}
